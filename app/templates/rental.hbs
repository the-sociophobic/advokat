<div class="container">
  <div style="margin: 15px 0; overflow-y: auto">

    <div style="width: 50%; float: left; padding-right: 15px">
      <p class="text-32 text-center">{{model.address}}</p>
      {{image-view images=model.images length=model.images.length}}
    </div>
    <div style="width: calc(50% - 15px); float: left; margin-left:15px">
      <p class="text-32 text-center">{{{rental-category-rooms model.category model.rooms}}} {{#if (eq model.category 'квартира')}} квартира{{/if}}</p>
    </div>
    <div style="width: calc(50% - 15px); float: left; margin-left: 15px; padding: 0 0 10px 25px">
      {{#link-to 'rentals' (query-params type=model.type category=model.property_type)}}Назад к списку объектов{{/link-to}}

      <a style='cursor: pointer; float: right; margin-right: 92px' onClick="window.print()">Распечатать</a><br><br>

      <span class='text-20'>{{number-spaces model.price}} рублей{{#if (eq model.type 'арендовать')}}/месяц{{/if}}</span>
      {{#if (eq model.type 'купить')}}
        <a style='cursor: pointer; float: right; margin-right: 92px' {{action 'toCalc'}}>{{number-spaces monthly}} руб./мес.</a><br>
        <small>{{{price-per-meter model.price model.area}}} руб./м²</small>
      {{/if}}
      <br><br>

      {{model.district}} район<br>
      <span style='margin-left: 20px'class="{{metro-logo model.metro}}">{{model.metro}}</span><br>
      {{model.address}}

      <div style='width: 100%; overflow-y: auto; margin: 20px 0'>
        <div style='width: calc(50% - 10px); padding-left: 30px; float: left'>
          {{#unless  (eq model.property_type 'загородная')}}
            Общая площадь:<br>
            {{#unless (eq model.property_type 'коммерческая')}}
              Жилая площадь:<br>
              Площадь комнат:<br>
              Площадь кухни:<br>
            {{/unless}}
            Этаж/Этажей:
            {{#if (eq model.type 'купить')}}
              <br><br>Тип дома:
              <br>Вид сделки:
            {{/if}}
          {{else}}
            Площадь дома:<br>
            Площадь участка:<br>
          {{/unless}}
        </div>
        <div style='width: calc(50% - 10px); float: left'>
          {{dot-to-comma model.area}} м²<br>
          {{#unless  (eq model.property_type 'загородная')}}
            {{#unless (eq model.property_type 'коммерческая')}}
              {{dot-to-comma model.living_space}} м²<br>
              {{dot-to-comma model.room_space}} м²<br>
              {{dot-to-comma model.kitchen_space}} м²<br>
            {{/unless}}
            {{model.floor}}/{{model.floors_total}}
          {{else}}
            {{dot-to-comma model.lot_area}} м²
          {{/unless}}
          {{#if (eq model.type 'купить')}}
            <br><br>{{model.building_type}}
            {{#unless (eq model.property_type 'новостройки')}}
              <br>{{model.deal_status}}
            {{/unless}}
          {{/if}}
        </div>
      </div>

      <div style='width: 100%; overflow-y: auto; margin: 20px 0'>
        {{{model.description}}}
      </div>

      <div style='width: 100%; overflow-y: auto; overflow-x: visible; margin-top: 20px; padding: 0 5px 20px 5px'>
        <button class="left" style='width: calc(50% - 10px); height: 35px; margin-right: 20px' {{action 'popup1'}}>Записаться на просмотр</button>
        <button class="left" style='width: calc(50% - 10px); height: 35px' {{action 'popup2'}}>Задать вопрос</button>
      </div>

      <div class='block' style='width: 100%; overflow-y: auto; padding: 15px 110px'>
        <div style='width: 32%;float: left'>
          агент:<br>
          телефон:<br>
          почта:<br>
        </div>
        <div style='width: 68%; float: left'>
          {{model.name}}<br>
          {{phone-formatting model.phone}}<br>
          {{model.mail}}<br>
        </div>
      </div>
    </div>
  </div>
  {{location-map location=(spb-address model.address)}} 
  {{#if (eq model.type 'купить')}}
    <p class='text-20 text-center'>калькулятор ипотеки</p>
    {{mortgage-calc total=model.price monthly=monthly}}
  {{/if}}
</div>

{{callback-form shown=showPopup1 title='Записаться на просмотр' description='оставьте заявку, мы обязательно с Вами свяжемся'}}
{{callback-form shown=showPopup2 title='Задать вопрос' description='задайте вопрос, мы обязательно Вам ответим'}}
