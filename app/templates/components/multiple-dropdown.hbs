<div class="multiple-dropdown" style="width:{{width}}">
  <div class="multiple-dropdown-field {{if isExpanded "full-area rot-arrow"}}" style="width:{{width}}" {{action 'toggleExpand' preventDefault=false}}>
    <div class="multiple-dropdown-checked" style="width:calc({{width}} - 5px)">
      {{checkedLabels}}
    </div>
  </div>
  <div class="multiple-dropdown-options {{unless isExpanded "hidden"}}" style="width: {{width}}">
    {{#each option as |Unit|}}
      <label for="{{Unit}}">
        <input type="checkbox" id="{{Unit}}" {{action 'toggleLabel' Unit on='change' preventDefault=false}}/>
        {{Unit}}
      </label>
    {{/each}}
  </div>
</div>