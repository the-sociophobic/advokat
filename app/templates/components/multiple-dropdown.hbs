<div class="multiple-dropdown" style="width:{{width}}" {{action 'Collapse' on="mouseLeave" preventDefault=false}}>
  <div class="multiple-dropdown-field block {{if isExpanded "rot-arrow"}}" style="width:{{width}}" {{action 'toggleExpand' preventDefault=false}}>
    <div class="multiple-dropdown-checked" style="width:calc({{width}} - 5px)">
      {{checked}}
    </div>
  </div>
  <div class="multiple-dropdown-options {{unless isExpanded "hidden"}}" style="width: {{width}}">
    {{#if (eq checked.[0] 'Любой')}}
      <label for="any">
        <input type="checkbox" checked id="any" {{action 'toggleLabel' Unit on='change' preventDefault=false}}/>
        Любой
      </label>
      {{#each options as |Unit|}}
        <label for="{{Unit}}">
          <input type="checkbox" checked id="{{Unit}}" {{action 'toggleLabel' Unit on='change' preventDefault=false}}/>
          {{Unit}}
        </label>
      {{/each}}
    {{else}}
      <label for="{{Unit}}">
        <input type="checkbox" id="{{Unit}}" {{action 'toggleLabel' Unit on='change' preventDefault=false}}/>
        {{Unit}}
      </label>
      {{#each options as |Unit|}}
        <label for="{{Unit}}">
          <input type="checkbox" id="{{Unit}}" {{action 'toggleLabel' Unit on='change' preventDefault=false}}/>
          {{Unit}}
        </label>
      {{/each}}
    {{/if}}
  </div>
</div>