<div class="index-search">  
  <div class="index-search-1"></div>
  <div class="index-search-2"></div>
  <div class="index-search-3"></div>
  <div class="index-search-4"></div>
  <div class="index-search-1"></div>
  <div class="container">
    <div class="container-search-tab">
      {{radio-button classs='index-radio' checkedClass='index-radio-checked' checked=buyCheck    label='КУПИТЬ'     onCheck=(action 'buy')}}
      {{radio-button classs='index-radio' checkedClass='index-radio-checked' checked=sellCheck   label='ПРОДАТЬ'    onCheck=(action 'sell')}}
      {{radio-button classs='index-radio' checkedClass='index-radio-checked' checked=rentCheck   label='АРЕНДОВАТЬ' onCheck=(action 'rent')}}
      {{radio-button classs='index-radio' checkedClass='index-radio-checked' checked=toRentCheck label='СДАТЬ'      onCheck=(action 'toRent')}}
    </div>
    <div class="search {{if isHidden "test"}}">
      <div class="container-wide" style="padding-bottom: 10px">
      <p style="margin-bottom: -7px; margin-left: -420px">недвижимость</p>
        {{#if buyCheck}}
          {{#link-to 'rentals' (query-params type='buy' category='living')}}<b>ЖИЛАЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='buy' category='new')}}<b>СТРОЯЩАЯСЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='buy' category='commerical')}}<b>КОММЕРЧЕСКАЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='buy' category='country')}}<b>ЗАГОРОДНАЯ</b>{{/link-to}}
        {{/if}}
        {{#if sellCheck}}
          {{#link-to 'rentals' (query-params type='buy' category='living')}}<b>ЖИЛАЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='buy' category='new')}}<b>СТРОЯЩАЯСЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='buy' category='commerical')}}<b>КОММЕРЧЕСКАЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='buy' category='country')}}<b>ЗАГОРОДНАЯ</b>{{/link-to}}
        {{/if}}
        {{#if rentCheck}}
          {{#link-to 'rentals' (query-params type='rent' category='living')}}<b>ЖИЛАЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='rent' category='commerical')}}<b>КОММЕРЧЕСКАЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='rent' category='country')}}<b>ЗАГОРОДНАЯ</b>{{/link-to}}
        {{/if}}
        {{#if toRentCheck}}
          {{#link-to 'rentals' (query-params type='buy' category='living')}}<b>ЖИЛАЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='buy' category='commerical')}}<b>КОММЕРЧЕСКАЯ</b>{{/link-to}}
          {{#link-to 'rentals' (query-params type='buy' category='country')}}<b>ЗАГОРОДНАЯ</b>{{/link-to}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
