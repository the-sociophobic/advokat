<div class="rentals-search block block-no-top">
  <div class="container-wide">
    <div class="rentals-radio-panel w1">
      <input type="radio" id="1" name="type" checked="checked" {{action 'unHide' preventDefault=false}}>
      <label class="left" for="1">Купить</label>
      <input type="radio" id="2" name="type" {{action 'Hide' preventDefault=false}}>
      <label class="right" for="2">Арендовать</label>
    </div>
    <div class="rentals-radio-panel w2 {{if isHidden "w3"}}">
      <input type="radio" id="3" name="property-type" checked="checked">
      <label class="left" for="3">Жилая</label>
      {{#unless isHidden}}
        <input type="radio" id="4" name="property-type">
        <label for="4">Новостройки</label>
      {{/unless}}
      <input type="radio" id="5" name="property-type">
      <label for="5">Коммерческая</label>
      <input type="radio" id="6" name="property-type">
      <label class="right" for="6">Загородная</label>
    </div>
  </div>
  <div class="space35">
    <span>Тип: </span>{{multiple-dropdown option=livingType width="200px"}}
  </div>
  <div class="space35">
    <span>Район: </span>{{multiple-dropdown option=District width="719px"}}
  </div>
  <div class="space35">
    <span>Кол-во комнат: {{roomsMinValue}} - {{roomsMaxValue}}</span>
    {{slider-range width="294px" min=roomsMin max=roomsMax minValue=roomsMinValue maxValue=roomsMaxValue step=1}}
  </div>
  <div class="space35">
    <span>Общая площадь: {{areaMinValue}} - {{areaMaxValue}} м²</span>
    {{slider-range width="294px" min=areaMin max=areaMax minValue=areaMinValue maxValue=areaMaxValue step=1}}
  </div>
  <div class="space35">
    <span>Цена: {{price-short-calm priceMinValue}} - {{price-short-calm priceMaxValue}} млн. рублей</span>
    {{slider-range width="294px" min=priceMin max=priceMax minValue=priceMinValue maxValue=priceMaxValue step=100000}}
  </div>
</div>